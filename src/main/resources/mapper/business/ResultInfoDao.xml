<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spider.modules.business.dao.ResultInfoDao">
	<resultMap type="com.spider.modules.business.entity.ResultInfoEntity" id="Base_ResultMap">
		<id column="id" property="id"/>
		<result column="system" property="system"/>
		<result column="module" property="module"/>
		<result column="creat_time" property="creatTime"/>
		<result column="is_model" property="isModel"/>
		<result column="link_id" property="linkId"/>
		<result column="state" property="state"/>
	</resultMap>
	
	<resultMap
		type="com.spider.modules.business.entity.ResultInfoEntity" id="Page_ResultMap">
		<id column="id" property="id"/>
		<result column="system" property="system"/>
		<result column="module" property="module"/>
		<result column="creat_time" property="creatTime"/>
		<result column="is_model" property="isModel"/>
		<result column="link_id" property="linkId"/>
		<result column="state" property="state"/>
		<collection property="pageInfo" ofType="com.spider.modules.business.entity.PageInfoEntity">
			<id column="page_id" property="pageId"/>
			<result column="name_cn" property="nameCn"/>
			<result column="name_en" property="nameEn"/>
			<result column="information_name" property="informationName"/>
			<result column="create_time" property="createTime"/>
			<result column="update_time" property="updateTime"/>
			<result column="is_change" property="isChange"/>
			<result column="result_id" property="resultId"/>
			<result column="state" property="state"/>
		</collection> 
	</resultMap>
	
	<resultMap type="com.spider.modules.business.entity.ResultInfoEntity" id="Element_ResultMap">
		<id column="id" property="id"/>
		<result column="system" property="system"/>
		<result column="module" property="module"/>
		<result column="creat_time" property="creatTime"/>
		<result column="is_model" property="isModel"/>
		<result column="link_id" property="linkId"/>
		<result column="state" property="state"/>
		<collection property="elementInfo" ofType="com.spider.modules.business.entity.ElementInfoEntity">
			<id column="element_id" property="elementId"/>
			<result column="name_cn" property="nameCn"/>
			<result column="name_en" property="nameEn"/>
			<result column="source" property="source"/>
			<result column="information_name" property="informationName"/>
			<result column="type" property="type"/>
			<result column="len" property="len"/>
			<result column="remark" property="remark"/>
			<result column="routine" property="routine"/>
			<result column="result_id" property="resultId"/>
			<result column="state" property="state"/>
		</collection>
	</resultMap>

	
	<sql id="Base_Column_List">
		id,system,module,creat_time,is_model,link_id,state
	</sql>
	<sql id="Base_Column_Page">
		page_id,name_cn,name_en,information_name,create_time,update_time,is_change,result_id,state as p.state
	</sql>
	
	<!-- 根据id查询数据 -->
	<select id="queryById" parameterType="java.lang.Integer"
		resultMap="Base_ResultMap">
		select * from spider_result_info where state = 1 and
		id = #{id}
	</select>
	
	<!-- 多表查采集结果中element信息 -->
	<select id="queryByResultId" parameterType="java.lang.Integer" resultMap="Element_ResultMap">
		SELECT
		*
		FROM
			spider_result_info r
		LEFT JOIN spider_element_info e ON r.id = e.result_id
		WHERE
		 result_id = #{resultId}
	</select>
	
	<!-- 多表查采集结果中pageInfo信息 -->
	<select id="listByResultId" parameterType="com.spider.modules.business.entity.ResultInfoEntity" resultMap="Page_ResultMap">
		SELECT
			*
		FROM
			spider_result_info r
		LEFT JOIN spider_page_info p ON r.id = p.result_id
		<where>
			<if test="isModel != null">
				AND is_model = #{isModel}
			</if>
				AND	p.state = 1
				AND id = #{id}
		</where>
	</select>
	
	<!-- 资源目录汇总查询 -->
	<select id="querySum" resultType="java.util.Map">
		SELECT
			system,
			COUNT(system) as countNum
		FROM
			spider_link_info
		GROUP BY
			system
	</select>
	
	<!-- 更新数据 -->
	<update id="update"
		parameterType="com.spider.modules.business.entity.ResultInfoEntity">
		update spider_result_info
		<set>
			<if test="system != null and system.trim() != ''">
				system = #{system},
			</if>
			<if test="module != null and module.trim() != ''">
				module = #{module},
			</if>
			<if test="isModel != null and isModel.trim() != ''">
				is_model = #{isModel},
			</if>
			<if test="linkId != null">
				link_id = #{linkId},
			</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.spider.modules.business.entity.ResultInfoEntity" useGeneratedKeys="true" keyProperty="id">
		insert into spider_result_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="system != null">
				system,
			</if>
			<if test="module != null">
				module,
			</if>
			<if test="creatTime != null">
				creat_time,
			</if>
			<if test="isModel != null">
				is_model,
			</if>
			<if test="linkId != null">
				link_id,
			</if>
			<if test="state != null">
				state,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="system != null">
				#{system},
			</if>
			<if test="module != null">
				#{module},
			</if>
			<if test="creatTime != null">
				#{creatTime},
			</if>
			<if test="isModel != null">
				#{isModel},
			</if>
			<if test="linkId != null">
				#{linkId},
			</if>
			<if test="state != null">
				#{state},
			</if>
		</trim>
	</insert>
	
	<!-- 数据逻辑删除，根据id -->
	<update id="delete">
		UPDATE spider_result_info
		<set>
			state = 0
		</set>
		where id in
		<foreach item="id" collection="ids" open="("
			separator="," close=")">
			#{id}
		</foreach>
	</update>
</mapper>